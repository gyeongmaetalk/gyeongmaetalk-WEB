{
  "extends": "@gyeongmaetalk/typescript-config/base.json",
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "node_modules/@gyeongmaetalk/**/*"
  ],
  "compilerOptions": {
    "types": ["node", "vite/client", "navermaps"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "verbatimModuleSyntax": true
  }
}
